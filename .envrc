#!/usr/bin/env bash
# Root Environment Configuration
# This file is automatically loaded by direnv when entering the root directory
# Provides cross-environment access to all environments

# Set default environment variables (no specific environment)
unset ANSIBLE_INVENTORY_ENV
export ANSIBLE_ENVIRONMENT=all
export ANSIBLE_CONFIG="$(pwd)/shared/configs/ansible.cfg"

# Set SOPS environment
export SOPS_AGE_KEY_FILE="${HOME}/.config/sops/age/keys.txt"

# Add project paths
export PATH="$(pwd)/bin:${PATH}"
export PLAYBOOK_DIR="$SHARED_DIR_PATH/ansible/playbooks"
export PD="$PLAYBOOK_DIR"


# Cross-environment settings
export ANSIBLE_DEBUG=false
export ANSIBLE_VERBOSITY=0
export ANSIBLE_FORKS=10

# Git settings
export GIT_WORK_TREE="$(pwd)"
export GIT_DIR="$(pwd)/.git"

export SHARED_DIR_PATH="$(pwd)/shared"


# Minimal output
echo "üè† Root Environment (Cross-Environment Access)"
