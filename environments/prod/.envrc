#!/usr/bin/env bash
# Production Environment Configuration
# This file is automatically loaded by direnv when entering the prod environment

# Set environment variables
export ANSIBLE_INVENTORY_ENV=prod
export ANSIBLE_ENVIRONMENT=prod
export ANSIBLE_CONFIG="$(pwd)/ansible/ansible.cfg"
export SHARED_DIR_PATH="$(pwd)/../../shared"
export PLAYBOOK_DIR="$SHARED_DIR_PATH/ansible/playbooks"
export PD="$PLAYBOOK_DIR"
export SOPS_AGE_KEY_FILE="${HOME}/.config/sops/age/keys.txt"

# Add environment-specific paths
export PATH="$(pwd)/bin:${PATH}"
# Terraform integration
export TF_VAR_environment=dev
export TF_VAR_cluster_name=dev-cluster

# Proxmox settings
export PROXMOX_ENVIRONMENT=dev
export PROXMOX_API_URL="https://192.168.1.102:8006"

# Kubernetes settings
export KUBECONFIG="$(pwd)/kubeconfig"
export K8S_CLUSTER_NAME=dev-cluster

# Git settings for this environment
export GIT_WORK_TREE="$(pwd)/.."
export GIT_DIR="$(pwd)/../.git"
echo "ðŸš€ Production Environment"
